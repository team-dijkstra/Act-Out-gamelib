#ifnedef PLAYER_H
#define PLAYER_H

#include <vector>
class Phase;
class Action;
Class Filter;

class Player {
   //accessors
   virtual bool alive() const =0;
   virtual string name() const =0;
   virtual std::vector<Phase> remainingPhases() const =0;
   virtual std::vector<Action> validActions(Filter * f) const =0;
   
   virtual ~Player() {}
};

#endif
